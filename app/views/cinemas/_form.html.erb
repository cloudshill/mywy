<%= form_for(@cinema, :html => { :class => "form-horizontal" }) do |f| %>
  <%= render 'shared/form_error_messages', :f => f %>

  <div class="form-group">
    <%= f.label :name, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :guide, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :guide, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "保存", :class => "btn btn-info" %>
    </div>
  </div>
<% end %>

<%= form_for(@cinema, :html => { :class => "form-horizontal" }) do |f| %>
  <div class="form-group">
    <%= f.label :avatar, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= image_tag(@cinema.avatar.url("140x140")) %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.file_field :avatar %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "保存", :class => "btn btn-info" %>
    </div>
  </div>
<% end %>
