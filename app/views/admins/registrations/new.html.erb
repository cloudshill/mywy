<div class="row">
  <div class="col-md-4">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true) do |f| %>
      <fieldset>
        <div class="form-group">
          <label for="exampleInputEmail1">手机</label>
          <%= f.text_field :mobile, :autofocus => true, :class=>"form-control" %>
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">邮箱</label>
          <%= f.text_field :email, :class=>"form-control" %>
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">密码</label>
          <%= f.password_field :password, :class=>"form-control" %>
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">密码确认</label>
          <%= f.password_field :password_confirmation, :class=>"form-control" %>
        </div>
        <%= f.submit "注册", :class => 'btn btn-primary' %>&nbsp;&nbsp;
        <%= link_to "忘记密码?", new_password_path(resource_name) %>
      </fieldset>
    <% end %>
  </div>
  <div class="col-md-8"></div>
</div>