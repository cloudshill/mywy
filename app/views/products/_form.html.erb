<%= form_for(@product) do |f| %>
  <%= render 'shared/form_error_messages', :f => f %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :inprice %><br>
    <%= f.text_field :inprice %>
  </div>
  <div class="field">
    <%= f.label :inventory %><br>
    <%= f.number_field :inventory %>
  </div>
  <div class="field">
    <%= f.label :sales %><br>
    <%= f.number_field :sales %>
  </div>
  <div class="field">
    <%= f.label :barcode %><br>
    <%= f.text_field :barcode %>
  </div>
  <div class="field">
    <%= f.label :node_id %><br>
    <%= f.text_field :node_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
