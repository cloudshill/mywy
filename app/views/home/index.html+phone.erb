<div class="content">
  <ul class="navigation-box list-unstyled list-inline">
    <li>
      <%= link_to products_path do %>
        <span class="fa fa-shopping-cart"></span>
        <span>商城</span>
      <% end %>
    </li>
    <li>
      <%= link_to foods_path do %>
        <span class="fa fa-cutlery"></span>
        <span>餐厅</span>
      <% end %>
    </li>
    <li>
      <%= link_to movies_path do %>
        <span class="fa fa-file-video-o"></span>
        <span>电影</span>
      <% end %>
    </li>
  </ul>
  <%= render 'shared/notification' %>
  <section id="home_page">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <section class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <div id="movie" class="ui-slide-box">
                <div class="ui-slide-control">
                  <span class="title">电影</span>
                </div>
                <div class="ui-slide-content">
                  <div class="row">
                    <% @movies.each do |movie| %>
                    <div class="ui-slide-content-box col-md-3">
                      <%= link_to movie_path(movie) do %>
                        <%= image_tag(movie.cover.url("140x140")) %>
                      <% end %>
                      <div class="controll-box">
                        <a href="" class="left pull-left" alt="订票">
                          <span class="fa fa-plus"></span>
                        </a>
                        <a href="" class="right pull-right" alt="赞">
                          <span class="fa fa-heart"></span>
                        </a>
                      </div>
                    </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </section>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>