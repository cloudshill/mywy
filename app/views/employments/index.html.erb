<section id="tickets" class="offcanvas-siderbars">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="panel panel-info">
          <div class="panel-heading"><span>电影院管理中心</span></div>
          <ul class="list-group">
            <li class="list-group-item"><%= link_to '我的电影院', cinemas_path %></li>
          </ul>
        </div>
        <div class="panel panel-info">
          <div class="panel-heading"><span>员工管理中心</span></div>
          <ul class="list-group">
            <li class="list-group-item"><%= link_to '员工列表', cinema_employments_path(@cinema) %></li>
          </ul>
        </div>
      </div>
      <div class="col-md-9">
        <div class="panel panel-info">
          <div class="panel-heading">
            <span>员工列表</span>
          </div>
          <div class="panel-body">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Employmentable</th>
                  <th>Employmentable type</th>
                  <th>Member</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @employments.each do |employment| %>
                  <tr>
                    <td><%= employment.employmentable_id %></td>
                    <td><%= employment.employmentable_type %></td>
                    <td><%= employment.member_id %></td>
                    <td><%= link_to 'Show', employment %></td>
                    <td><%= link_to 'Edit', edit_employment_path(employment) %></td>
                    <td><%= link_to 'Destroy', employment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
