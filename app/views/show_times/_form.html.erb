<%= form_for([@cinema, @show_time], :validate => true, :html => {:class => "form-horizontal"}) do |f| %>
<fieldset>
  <div class="form-group">
    <label class="col-sm-2 control-label">电影：</label>
    <div class="col-sm-10">
      <%= f.select :movie_id, Movie.all.map{ |m| [m.title, m.id] }, {:prompt=>"请选择"}, :class=>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">影厅：</label>
    <div class="col-sm-10">
      <%= f.select :movie_hall_id, @cinema.movie_halls.map{ |m| [m.name, m.id] }, {:prompt=>"请选择"}, :class=>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">制作技术：</label>
    <div class="col-sm-10">
      <%= f.select :technology, ShowTime.technology.options, {:prompt=>"请选择"}, :class=>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">时间：</label>
    <div class="col-sm-10">
      <%= f.datetime_select :show_time, :class=>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">价格：</label>
    <div class="col-sm-10">
      <%= f.text_field :price, :class=>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "保存", :class => 'btn btn-info' %>
    </div>
  </div>
</fieldset>
<% end %>