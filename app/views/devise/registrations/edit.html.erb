<section id="columns" class="offcanvas-siderbars">
  <div class="row visible-xs">
    <div class="container"> 
      <div class="offcanvas-sidebars-buttons">
        <button type="button" data-for="column-left" class="pull-left btn btn-danger"><i class="fa fa-sort-amount-asc"></i> Sidebar Left</button>
      
        <button type="button" data-for="column-right" class="pull-right btn btn-danger">Sidebar Right <i class="fa fa-sort-amount-desc"></i></button>
      </div>
    </div>
  </div>
  <div id="breadcrumb">
    <ol class="breadcrumb container">
      <li><a href="http://www.themelexus.com/demo/opencart/megashop/index.php?route=common/home"><span>首页</a></span></li>
      <li><a href="http://www.themelexus.com/demo/opencart/megashop/index.php?route=account/account"><span>账号</a></span></li>
      <li><a href="http://www.themelexus.com/demo/opencart/megashop/index.php?route=account/edit"><span>修改资料</a></span></li>
    </ol>
  </div>
  <div class="container">
    <div class="row">
      <section class="col-lg-9 col-md-9 col-sm-12 col-xs-12"> 
        <div id="content">
          <h1>账号资料</h1>
          <div class="wrapper no-margin">
            <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
              <h2 class="no-margin-top">个人信息</h2>
              <div class="content table-responsive">
                <table class="form">
                  <tr>
                    <td>
                      <%= f.label :email %>
                    </td>
                    <td>
                      <%= f.email_field :email, :autofocus => true %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <%= f.label :nickname %>            
                    </td>
                    <td>
                      <%= f.text_field :nickname %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <%= f.label :mobile %>
                    </td>
                    <td>
                      <%= f.text_field :mobile %>
                    </td>
                  </tr>
                </table>
              </div>      
              
              <div class="buttons">
                <div class="left">
                  <%= link_to "返回", :back, :class => "button" %>
                </div>
                <div class="right">
                  <%= f.submit "保存", :class => "button" %>
                </div>
              </div>
            <% end %>

            <br/>

            <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
              <h2 class="no-margin-top">修改密码</h2>
              <div class="content table-responsive">
                <table class="form">
                  <tr>
                    <td>
                      <%= f.label :password %>
                    </td>
                    <td>
                      <%= f.password_field :password, :autocomplete => "off" %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <%= f.label :password_confirmation %>          
                    </td>
                    <td>
                      <%= f.password_field :password_confirmation %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <%= f.label :current_password %>
                    </td>
                    <td>
                      <%= f.password_field :current_password %>
                    </td>
                  </tr>
                </table>
              </div>      
              
              <div class="buttons">
                <div class="left">
                  <%= link_to "返回", :back, :class => "button" %>
                </div>
                <div class="right">
                  <%= f.submit "保存", :class => "button" %>
                </div>
              </div>
            <% end %>

          </div>
        </div>
      </section>

      <aside class="col-lg-3 col-md-3 col-sm-12 col-xs-12"> 
        <div id="column-right" class="sidebar">
          <div class="box account highlights">
            <div class="box-heading">
              <span>我的账号</span>
            </div>
            <div class="box-content">
              <ul>
                <li>
                  <%= link_to "账号资料", edit_member_registration_path %>
                </li>
                <li>
                  <%= link_to "地址本", "#" %>
                </li>
                <li>
                  <%= link_to "收藏夹", favorites_accounts_path %>
                </li>
                <li>
                  <%= link_to "我的订单", orders_path %>
                </li>
                <li>
                  <%= link_to "站内通知", "#" %>
                </li>
                <li>
                  <%= link_to "退出登录", destroy_member_session_path, :method => :delete %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </aside>
    </div>
  </div>
</section>