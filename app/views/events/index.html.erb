<section id="tickets" class="offcanvas-siderbars">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="panel panel-info">
          <div class="panel-heading"><span>电影院管理中心</span></div>
          <ul class="list-group">
            <li class="list-group-item"><%= link_to '我的电影院', cinemas_path %></li>
            <% if not is_cinema_employee? %>
            <li class="list-group-item"><%= link_to '创建电影院', new_cinema_path %></li>
            <% end %>
          </ul>
        </div>
        <div class="panel panel-info">
          <div class="panel-heading"><span>影院活动中心</span></div>
          <ul class="list-group">
            <li class="list-group-item"><%= link_to '所有活动', cinema_events_path(@cinema) %></li>
            <% if not is_cinema_employee? %>
            <li class="list-group-item"><%= link_to '创建活动', new_cinema_event_path(@cinema) %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col-md-9">
        <div class="panel panel-info">
          <div class="panel-heading">
            <span>我的电影院</span>
          </div>
          <div class="panel-body">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Body</th>
                  <th>Eventable type</th>
                  <th>Eventable</th>
                  <th>Member</th>
                  <th>Start</th>
                  <th>Deadline</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @events.each do |event| %>
                  <tr>
                    <td><%= event.body %></td>
                    <td><%= event.eventable_type %></td>
                    <td><%= event.eventable_id %></td>
                    <td><%= event.member_id %></td>
                    <td><%= event.start %></td>
                    <td><%= event.deadline %></td>
                    <td><%= link_to 'Show', event %></td>
                    <td><%= link_to 'Edit', edit_event_path(event) %></td>
                    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>