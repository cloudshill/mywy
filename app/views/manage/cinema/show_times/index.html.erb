<%= render 'manage/cinema/shared/navbar' %>
<%= render 'shared/notification' %>
<section id="tickets" class="offcanvas-siderbars">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'manage/cinema/shared/cinemas_sidebar' %>
      </div>
      <div class="col-md-9">
        <div class="panel panel-info">
          <div class="panel-heading">
            <span><%= link_to @cinema.name, manage_cinema_cinemas_path %></span> - <span>场次</span>
          </div>
          <div class="panel-body">
            <ul class="clearfix list-inline">
              <li><%= link_to "今天", manage_cinema_cinema_show_times_path(@cinema, :day => "today") %></li>
              <li><%= link_to "明天", manage_cinema_cinema_show_times_path(@cinema, :day => "tomorrow") %></li>
              <li><%= link_to "后天", manage_cinema_cinema_show_times_path(@cinema, :day => "last") %></li>
            </ul>
          </div>
        </div>
        <div class="panel panel-info">
          <div class="panel-heading">
            <span><%= link_to @cinema.name, manage_cinema_cinemas_path %></span> - <span>场次</span>
          </div>
          <div class="panel-body">
            <table class="table" style="width:100%;">
              <thead>
                <tr>
                  <th style="width: 20px;"><input type="checkbox"></th>
                  <th style="width: 100px;">电影名</th>
                  <th style="width: 100px;">播放影厅</th>
                  <th style="width: 100px;">时间</th>
                  <th style="width: 50px;">价格</th>
                  <th style="width: 50px;">操作</th>
                </tr>
              </thead>
              <tbody>
                <% @show_times.each do |show_time| %>
                <tr>
                  <td><input type="checkbox" style="margin-top:12px;"></td>
                  <td><span style="font-size:17px;line-height:37px;"><%= show_time.movie.title %></span></td>
                  <td><span style="font-size:17px;line-height:37px;"><%= show_time.movie_hall.name %></span></td>
                  <td><span style="font-size:17px;line-height:37px;"><%= formattime(show_time.show_time, :unit => "hour") %></span></td>
                  <td><span style="font-size:17px;line-height:37px;">￥<%= show_time.price %>元</span></td>
                  <td>
                    <div class="btn-group">
                      <button type="button" class="btn btn-info dropdown-toggle btn-sm" data-toggle="dropdown">
                        操作 <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu" role="menu">
                        <li><%= link_to "修改", edit_manage_cinema_cinema_show_time_path(@cinema, show_time) %></li>
                        <li><%= link_to "删除", manage_cinema_cinema_show_time_path(@cinema, show_time), :method => :delete %></li>
                      </ul>
                    </div>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>