<%= form_for([:manage, :cinema, @cinema, @movie_hall], :validate => true, :html => {:class => "form-horizontal"}) do |f| %>
<fieldset>
  <div class="form-group">
    <label class="col-sm-2 control-label">中文名：</label>
    <div class="col-sm-10">
      <%= f.text_field :name, :class=>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">总行数：</label>
    <div class="col-sm-10">
      <%= f.text_field :rows, :class=>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">总列数：</label>
    <div class="col-sm-10">
      <%= f.text_field :cols, :class=>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "保存", :class => 'btn btn-info' %>
    </div>
  </div>
</fieldset>
<% end %>