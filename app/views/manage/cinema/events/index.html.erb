<%= render 'manage/cinema/shared/navbar' %>
<%= render 'shared/notification' %>
<section id="tickets" class="offcanvas-siderbars">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'manage/cinema/shared/cinemas_sidebar' %>
      </div>
      <div class="col-md-9">
        <div class="panel panel-info">
          <div class="panel-heading">
            <span>我的电影院</span>
          </div>
          <div class="panel-body">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>内容</th>
                  <th>发布者</th>
                  <th>开始日期</th>
                  <th>结束日期</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @events.each do |event| %>
                  <tr>
                    <td><%= event.body %></td>
                    <td><%= event.member_id %></td>
                    <td><%= formattime(event.start, :unit => "day") %></td>
                    <td><%= formattime(event.deadline, :unit => "day") %></td>
                    <td><%= link_to 'Show', event %></td>
                    <td><%= link_to 'Edit', edit_event_path(event) %></td>
                    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>