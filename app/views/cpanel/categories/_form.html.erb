
  <%= form_for([:cpanel, @node, @category], :html => { :class => "form-horizontal"}) do |f| %>
  <fieldset>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :class => "form-control" %>
    </div>
    <div class="form-group">
      <label>排序</label>
      <%= f.text_field :sort, :class => "form-control" %>
    </div>
    <div class="form-group">
      <label>父节点</label><br/>
      <%= f.collection_select(:parent_id, @node.categories.where(:parent_id => nil), :id, :name, :prompt => true) %>
    </div>
    
    <div class="form-actions">
      <%= f.submit "保存", :class => 'btn btn-success' %>
      or
      <%= link_to '返回', new_cpanel_node_category_path(@node), :class => 'btn btn-default' %>
    </div>
  <% end %>