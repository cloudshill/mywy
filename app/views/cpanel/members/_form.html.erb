<%= form_for([:cpanel, @member], :html => { :class => "form-horizontal" }) do |f| %>
<fieldset>
  <div class="form-group">
    <label class="col-sm-2 control-label">角色：</label>
    <div class="col-sm-10">
      <%= f.select :role, Member.role.options, {}, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">拥有权限：</label>
    <div class="col-sm-10">
      <% Member.business_scope.options.each do |key, value| %>
        <div class="checkbox">
          <label>
            <%= check_box_tag "member[business_scope][]", value, @member.business_scope.include?(value) %>
            <%= key %>
          </label>
        </div>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "保存", :class => 'btn btn-default' %>
      or
      <%= link_to '返回', cpanel_members_path, :class => 'btn btn-default' %>
    </div>
  </div>
</fieldset>
<% end %>