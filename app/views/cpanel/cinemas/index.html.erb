        <div class="col-md-2">
          <div class="sidebar">
            <ul class="nav nav-list">
              <li>
                <%= link_to "添加电影", new_cpanel_movie_path %>
              </li>
              <li>
                <%= link_to "电影列表", cpanel_movies_path %>
              </li>
              <li>
                <%= link_to "添加电影院", new_cpanel_cinema_path %>
              </li>
              <li>
                <%= link_to "电影院列表", cpanel_cinemas_path %>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-md-10">
          <div class="content">
            <ul class="breadcrumb">
              <li>管理面板</li>
              <li>电影院管理</li>
            </ul>
            <h2>电影院</h2>
            <table class="table" style="width:100%;">
              <thead>
                <tr>
                  <th style="width: 20px;"><input type="checkbox"></th>
                  <th style="width: 100px;">电影院名</th>
                  <th style="width: 100px;">影厅</th>
                  <th style="width: 100px;">场次</th>
                  <th style="width: 50px;">操作</th>
                </tr>
              </thead>
              <tbody>
                <% @cinemas.each do |cinema| %>
                <tr>
                  <td><input type="checkbox"></td>
                  <td><%= cinema.name %></td>
                  <td><%= link_to "查看影厅", cpanel_cinema_movie_halls_path(cinema), :class => "btn btn-default" %></td>
                  <td><%= link_to "查看场次", cpanel_cinema_show_times_path(cinema), :class => "btn btn-default" %></td>
                  <td>
                    <div class="btn-group">
                      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        操作 <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu" role="menu">
                        <li><%= link_to "查看", cpanel_cinema_path(cinema), :class => "btn btn-info" %></li>
                        <li><%= link_to "修改", edit_cpanel_cinema_path(cinema), :class => "btn btn-success" %></li>
                        <li><%= link_to "删除", cpanel_cinema_path(cinema), :method => :delete, :class => "btn btn-warning" %></li>
                      </ul>
                    </div>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>