<div class="col-md-2">
  <div class="sidebar">
    <ul class="nav nav-list">
    </ul>
  </div>
</div>
<div class="col-md-10">
  <%= render 'shared/notification' %>
  <h2>订单数据</h2>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">搜索</h3>
    </div>
    <div class="panel-body">
      <form class="form-inline" style="margin-bottom: 0px;">
        <div class="col-lg-4">
          <input class="form-control" name="q" placeholder="输入信息..." type="text">
        </div>
        <input type="submit" class="btn btn-default" value="搜索" />
      </form>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>名称</th>
        <th>总金额</th>
        <th>实收金额</th>
        <th>订单生成时间</th>
        <th>支付方式</th>
        <th>状态</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td>
          <% order.line_items.each do |line_item| %>
          <%= line_item.line_itemable.name %> X <%= line_item.amount %> | 
          <% end %>
        </td>
        <td><%= order.total_price %> (元)</td>
        <td><%= order.receivable %> (元)</td>
        <td><%= formattime(order.created_at, :unit => "hour") %></td>
        <td><%= order.pay_method %></td>
        <td><%= order.status %></td>
        <td>
          <%= link_to "查看", edit_cpanel_order_path(order) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>