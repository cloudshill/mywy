        <div class="col-md-2">
          <div class="sidebar">
            <ul class="nav nav-list">
              <li>
                <%= link_to "添加电影", new_cpanel_movie_path %>
              </li>
              <li>
                <%= link_to "电影列表", cpanel_movies_path %>
              </li>
              <li>
                <%= link_to "添加电影院", new_cpanel_cinema_path %>
              </li>
              <li>
                <%= link_to "电影院列表", cpanel_cinemas_path %>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-md-10">
          <div class="content">
            <ul class="breadcrumb">
              <li>管理面板</li>
              <li>电影管理</li>
            </ul>
            <h2>电影</h2>
            <table class="table" style="width:100%;">
              <thead>
                <tr>
                  <th style="width: 20px;"><input type="checkbox"></th>
                  <th style="width: 100px;">片名</th>
                  <th style="width: 100px;">上映年份</th>
                  <th style="width: 100px;">上映时间</th>
                  <th style="width: 100px;">国内上映时间</th>
                  <th style="width: 50px;">操作</th>
                </tr>
              </thead>
              <tbody>
                <% @movies.each do |movie| %>
                <tr>
                  <td><input type="checkbox"></td>
                  <td><%= movie.title %></td>
                  <td><%= movie.year %></td>
                  <td><%= formattime(movie.pubdate) %></td>
                  <td><%= formattime(movie.mainland_pubdate) %></td>
                  <td>
                    <div class="btn-group">
                      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        操作 <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu" role="menu">
                        <li><%= link_to "查看", cpanel_movie_path(movie) %></li>
                        <li><%= link_to "修改", edit_cpanel_movie_path(movie) %></li>
                        <li><%= link_to "删除", cpanel_movie_path(movie), :method => :delete %></li>
                        <li><%= link_to "预告片", cpanel_movie_trailers_path(movie) %></li>
                      </ul>
                    </div>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>